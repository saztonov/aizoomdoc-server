# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Supabase Chat DB (bd.json - основная БД для чатов и пользователей)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Supabase Projects DB (bd_supabase.json - read-only для дерева проектов)
SUPABASE_PROJECTS_URL=https://your-projects.supabase.co
SUPABASE_PROJECTS_ANON_KEY=your-projects-anon-key
SUPABASE_PROJECTS_SERVICE_KEY=your-projects-service-key

# S3/R2 Storage Configuration
R2_ENDPOINT_URL=https://your-account.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=aizoomdoc
R2_PUBLIC_DOMAIN=https://your-public-domain.com

# LLM Configuration (default, пользователи могут иметь свои ключи)
DEFAULT_GEMINI_API_KEY=your-default-gemini-key
DEFAULT_MODEL=gemini-3-flash-preview
MAX_TOKENS=8192
LLM_TEMPERATURE=1.0
LLM_TOP_P=0.95
MEDIA_RESOLUTION=high

# Thinking Configuration
THINKING_ENABLED=true
THINKING_BUDGET=0

# Image Processing
PREVIEW_MAX_SIDE=2000
ZOOM_PREVIEW_MAX_SIDE=2000
AUTO_QUADRANTS_THRESHOLD=2.5
VIEWPORT_SIZE=2048
VIEWPORT_PADDING=512

# File Upload
MAX_FILE_SIZE_MB=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

